<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moe.instafitness"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:debuggable="true"
        android:allowBackup="true"

        android:icon="@drawable/gym"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.moe.instafitness.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.moe.instafitness.activities.WorkoutListActivity"
            android:label="@string/title_activity_workout_list" >
        </activity>
        <activity
            android:name="com.moe.instafitness.activities.WorkoutActivity"
            android:label="@string/title_activity_workout" >
        </activity>
        <activity
            android:name="com.moe.instafitness.activities.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <!-- <provider 
            android:name=".database.InstaFitnessProvider"
            android:authorities="com.moe.instafitness.database.InstaFitnessProvider" >
        </provider> -->
    </application>

</manifest>