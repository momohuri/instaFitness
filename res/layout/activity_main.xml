<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:clickable="false"
    android:gravity="center|center_vertical|center_horizontal|top">

    <Button
        android:id="@+id/buttonListEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show me all &#10; excersice"
        android:drawableTop="@drawable/all_workout"
        android:background="@android:color/transparent"
        android:layout_above="@+id/imageView" android:layout_alignRight="@+id/buttonAtHome"
        android:layout_marginBottom="60dp" android:layout_marginLeft="35dp"/>

    <Button
            android:id="@+id/buttonAtHome"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="I'am at home"
            android:drawableTop="@drawable/home"
            android:background="@android:color/transparent"
            android:layout_marginTop="50dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"/>


    <Button
        android:id="@+id/buttonProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/history"
        android:background="@android:color/transparent"
        android:text="Show me my &#10;progress"
        android:layout_alignTop="@+id/buttonListEx" android:layout_alignRight="@+id/imageView"
        android:layout_marginRight="35dp"/>

    <Button
        android:id="@+id/buttonAtGym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/gym"
        android:background="@android:color/transparent"
        android:text="I'am at gym"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/buttonAtHome" android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="________________________________________"
            android:id="@+id/textView"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/buttonAtHome" android:layout_centerHorizontal="true"/>


    <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@drawable/cloud"
            android:gravity="bottom|left" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:adjustViewBounds="true" android:baselineAlignBottom="false"
            android:clickable="false"
            android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
            android:id="@+id/imageView" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"/>

</RelativeLayout>